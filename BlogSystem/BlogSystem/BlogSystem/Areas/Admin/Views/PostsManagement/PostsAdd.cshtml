@model PostsAddFormModel
@{
    ViewBag.Title = "Create Post";
}

@section HeaderSection {
    
    <link href="~/Content/plugins/popover/popover.css" rel="stylesheet" />
    <link href="~/Content/plugins/loader/loader.css" rel="stylesheet" />
}

@section Breadcramps {
    <ol class="breadcrumb">
        <li><a href="@Model.PostsUrl"><i class="fa fa-dashboard"></i> Posts</a></li>
        <li class="active"><a href="#"> @ViewBag.Title</a></li>
    </ol>
}


<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                General Properties
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" title="Collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" id="title" value="" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Slug</label>
                            <input type="text" class="form-control" id="slug" value="" />
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Cover Photo</label>
                        <div class="input-group image-preview">
                            <input type="text" class="form-control image-preview-filename" disabled="disabled">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default image-preview-clear" style="display: none;">
                                    <span class="glyphicon glyphicon-remove"></span> Clear
                                </button>
                                <span class="btn btn-default image-preview-input">
                                    <span class="glyphicon glyphicon-folder-open"></span>
                                    <span class="image-preview-input-title">Browse</span>
                                    <input type="file" accept="image/png, image/jpeg, image/gif" id="cover-photo" name="input-file-preview" />
                                </span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Category</label>
                            <select class="form-control" id="category">
                                <option value=""></option>
                                @foreach (var category in Model.Categories)
                                {
                                    <optgroup label="@category.Caption">
                                        @foreach (var secondLevelCategory in category.SecondLevelItems)
                                        {
                                            <option @(secondLevelCategory.IsSelected ? Html.Raw("selected='selected'") : null) value="@secondLevelCategory.Key">@secondLevelCategory.Value</option>
                                        }
                                    </optgroup>
                                }
                            </select>
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Language</label>
                            <select class="form-control" id="language">
                                @foreach (var postLanguage in Model.Languages)
                                {
                                    <option @(postLanguage.IsSelected ? Html.Raw("selected='selected'") : null) value="@postLanguage.Key"> @postLanguage.Value</option>
                                }
                            </select>
                            <span class="error-text"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control" id="status">
                                @foreach (var postStatus in Model.Statuses)
                                {
                                    <option @(postStatus.IsSelected ? Html.Raw("selected='selected'") : null) value="@postStatus.Key">@postStatus.Value</option>
                                }
                            </select>
                            <span class="error-text"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <a href="@Model.SaveUrl" class="btn btn-sm btn-flat btn-success pull-right create-post" title="Save post"><i class="fa fa-floppy-o"></i></a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header with-border">
                Post Description
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" title="Collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea id="description" class="form-control" cols="4" rows="20"></textarea>
                            <span class="text-error"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <a href="@Model.SaveUrl" class="btn btn-sm btn-flat btn-success pull-right create-post" title="Save post"><i class="fa fa-floppy-o"></i></a>
            </div>
        </div>
    </div>
</div>

@section FooterSection {
    <script src="~/Content/plugins/loader/loader.js"></script>
    <script src="~/Content/plugins/popover/popover.js"></script>
    <script src="~/Content/plugins/tinymce/tinymce.min.js"></script>
    <script src="~/Content/plugins/tinymce/jquery.tinymce.min.js"></script>
    <script src="~/Content/plugins/tinymce/tinymceConfig.js"></script>
    <script src="~/Areas/Admin/Content/scripts/PostsManagement/Post/PostsAdd.js"></script>
}
